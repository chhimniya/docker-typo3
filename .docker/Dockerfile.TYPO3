FROM composer:latest AS composer

COPY . /app

# Remove .docker because it cannot be excluded with .dockerignore
RUN rm -rf /app/.docker

RUN composer install --no-ansi --no-interaction --no-dev --no-progress --classmap-authoritative --ignore-platform-reqs

RUN composer exec typo3cms install:generatepackagestates

FROM t3easy/php:7.2

COPY .docker/ca-certificates /usr/local/share/ca-certificates
RUN update-ca-certificates

ARG LDAP=1
ARG REDIS=1
RUN set -ex; \
    \
    apk add --no-cache --virtual .build-deps \
        $PHPIZE_DEPS \
        openldap-dev \
    ; \
    if [ "$LDAP" = "1" ]; then \
        docker-php-ext-configure ldap; \
        docker-php-ext-install ldap; \
    fi; \
    \
    if [ "$REDIS" = "1" ]; then \
        pecl install redis-4.3.0; \
        docker-php-ext-enable redis; \
        rm -rf /tmp/pear; \
    fi; \
    \
    runDeps="$( \
        scanelf --needed --nobanner --format '%n#p' --recursive /usr/local/lib/php/extensions \
            | tr ',' '\n' \
            | sort -u \
            | awk 'system("[ -e /usr/local/lib/" $1 " ]") == 0 { next } { print "so:" $1 }' \
    )"; \
    apk add --virtual .typo3-phpext-rundeps $runDeps; \
    apk del .build-deps

COPY --chown=82 --from=composer /app .

ENV PATH "/app/vendor/bin:$PATH"
ENV TYPO3_CONTEXT Production
